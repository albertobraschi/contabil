<% @page_title = "Listing Categories" %>

<div class="float_right">
	<% remote_form_for([:admin,@catarc]) do |f| %>
	  <%= f.error_messages %>
	  <p>
		<label for="name">New Category</label>
		<%= f.text_field :name %>
	  </p>
	<% end %>
</div>

<br /><br />

<h2>Listing Archives Categories</h2>

<table id="tabela">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @catarcs.each do |catarc| %>
  <%= render :partial => "list", :locals => {:catarc => catarc} %>
<% end %>
</table>

