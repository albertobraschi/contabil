<% form_for([:admin,@user]) do |f| %>
  <%= f.error_messages %>
  <p>
    <label for="user_password">Password:</label><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <label for="user_password_confirmation">Confirm:</label><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <label for="name">User:<br />
    <%= f.text_field :name %>
  </p>
    <p>
    <%= f.submit 'Enviar' %>
  </p>
<% end %>