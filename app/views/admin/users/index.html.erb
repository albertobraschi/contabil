<h1>Listing users</h1>

<table>
  <tr>
    <th>User</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr id="<%= dom_id(user)%>">
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
    <td><%= link_to_remote 'Destroy', :url=>admin_user_path(user), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_admin_user_path %>